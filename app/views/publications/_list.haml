%ul
  - for publication in list
    %li
      - for identifier in publication.identifiers
        = link_to(identifier.titleize, edit_polymorphic_path([publication, identifier]))
        - if identifier.modified
          == *
        == (#{identifier.class})
      - if !publication.status.nil? && publication.status != ''
        == (#{publication.status})
/ - if @branches.length > 0
/   %h2 Listing Branches
/   %ul
/   - for branch in @branches
/     %li= branch