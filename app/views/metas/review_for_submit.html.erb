<% if flash[:notice] %>
  <div class= "notice"><%= flash[:notice] %></div>
 <% end %>



<%= render :partial => @meta , :locals => { :show_links => false }%>



<% form_tag( :controller => "metas", :action => "submit", :method => "get") do %>

<%= hidden_field_tag( :id, @meta.id) %>
<%= label_tag(:comment, "Describe your changes and reasoning.") %>
<br />
  <%= text_area_tag(:comment, "", :rows => 5, :cols => 80) %>
  <br />
  <%= submit_tag("Submit", :onclick => "check_for_comment()") %>
  
  <% end %>


<br /><br />
<%= link_to 'Document', url_for(@meta.article.master_article) %>
