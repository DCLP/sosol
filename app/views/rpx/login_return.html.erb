<div id="main" class="site">
<p>
You've authenticated as <strong><%= h session[:identifier] %></strong>,
but you need to enter a nickname to sign up.
</p>

<% form_for :new_user, :url => { :action => "create_submit" } do |f| %>
  <table>
    <tr>
      <th>Nickname</th>
      <td><%= f.text_field :name, :value => @name %></td>
    </tr>
    <tr>
      <th>E-Mail</th>
      <td><%= f.text_field :email, :value => @email %></td>
    </tr>
  </table>
  <%= submit_tag "Create" %>
<% end %>
</div>