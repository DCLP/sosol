<h1>Listing translations</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Language</th>
    <th>User</th>
    <th>Article</th>
  </tr>

<% for translation in @translations %>
  <tr>
    <td><%=h translation.content %></td>
    <td><%=h translation.language %></td>
    <td><%=h translation.user_id %></td>
    <td><%=h translation.article_id %></td>
    <td><%= link_to 'Show', translation %></td>
    <td><%= link_to 'Edit', edit_translation_path(translation) %></td>
    <td><%= link_to 'Destroy', translation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New translation', new_translation_path %>
