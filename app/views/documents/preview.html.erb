<div id="main">

<%= render :partial => 'edit_bar' %>

<div class="site">
<h1>Previewing document</h1>

<% form_for(@document) do |f| %>
  <%= f.error_messages %>

  <div class="preview">
    <%= @transformed %>
  </div>
  <br />
  <%= render :partial => 'edit_commit', :locals => { :f => f } %>
<% end %>

<%= link_to 'Show', @document %> |
<%= link_to 'Back', documents_path %>
</div>
</div>
