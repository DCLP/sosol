<h1>Listing documents</h1>

<table>
  <tr>
		<th>Title</th>
    <th>Content</th>
  </tr>

<% for document in @documents %>
  <tr>
		<td><%=h REXML::XPath.first(REXML::Document.new(document.content), "/TEI.2/teiHeader/fileDesc/titleStmt/title").text %></td>
		<td><%=h "#{document.content[0,200]}..." %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New document', new_document_path %>
