<div id="main">

<%= render :partial => 'edit_bar' %>

<div class="site">
<h1>Editing document</h1>

<% form_for(@document) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
		<%= f.text_area :content, :cols => 80, :rows => 40 %>
  </p>
  <%= render :partial => 'edit_commit', :locals => { :f => f } %>
<% end %>

<%= link_to 'Show', @document %> |
<%= link_to 'Back', documents_path %>
</div>
</div>
