<script>
function showHide(id)
{
  var element = document.getElementById(id);
  if ( element.style.display != 'none' )
  {
     element.style.display = 'none';
  }
  else
  {
    element.style.display = '';
  }
}
</script>

<h1>
<% if @current_user.name != nil %>
<%= @current_user.name %>
<% else %>
<%= 'Guest' %>
<% end %> 
's Dashboard</h1>


