#main
  = render :partial => 'edit_bar'
  .site
    %h1
      Editing Publication
      = @identifier.publication.title
    %h3
      Identifier
      = @identifier.name
    #edit
      - form_for @identifier, :url => { :action => :update } do |f|
        = f.error_messages

        %p
          = f.label "Leiden+"
          %br
          = f.text_area :leiden_plus, :lang => 'grc', 'xml:lang' => 'grc', :cols => 80, :rows => 40, :wrap => 'off', :class => 'greek'
        = render :partial => 'edit_commit', :locals => { :f => f }
