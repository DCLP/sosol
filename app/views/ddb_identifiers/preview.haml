#main
  = render :partial => 'identifiers/edit_bar'

  .site
    %h1 Previewing article

    #edit
      - form_for @identifier, :url => { :action => :update }  do |f|
        = f.error_messages

        .PContent
          = @identifier[:html_preview]
        %br
        = render :partial => 'identifiers/edit_commit', :locals => { :f => f }
