<% if !user_has_voted %>
	<% form_for :vote, @vote, :url => { :action => "vote", :id => @article.id }  do |f| %>

	<%= text_area_tag :comment, "", :rows => "5", :cols => "80" %>

		<% board.decrees.each do |decree| %>
		  <% decree.get_choice_array.each do |choice| %>
			<%= f.radio_button(:choice, choice) %><%= choice %>
		  <% end %>
		<% end %>
		
		

	<%= submit_tag "Vote" %>
	<% end %>
<% end %>

