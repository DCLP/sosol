
<h2><%= link_to @article.master_article.title, url_for(@article.master_article) %></h2>

<%= render :partial => @article.get_category_obj() , :locals => {:show_edit_link => true} %>


<h3>Comments</h3>
<div class="review_comments">
  <% @article.comments.each do |comment | %>
    <%= render :partial => comment %>
    <br />
  <% end %>
</div>

<% user_has_voted = false %>
<% board = @article.board %>


<div class = "board_tally">

<h4><%= board.title %> Votes</h4>
<% users = board.users %>
<% users.each do |user| %>
  <strong><%= user.name %></strong>
  <% vote = @article.votes.find_by_user_id (user.id) %>
  <% if vote %>
    <%= vote.choice %>
  <% else %>
    <%= "?" %>
  <% end %>
  <br />
<% end %>
</div>

<%= button_to "Finalize", { :action => 'finalize', :id => @article.get_category_obj().id } %>




