.multi{:id => 'multi_' + key.to_s}
  %ul.items{:id => 'multiItems_' + key.to_s}
    - @identifier[key].each_index do |index|
      %li
        - id = 'hgv_meta_identifier[' + key.to_s + '][' + index.to_s + ']' 
        - value = defined?(pathToActualValue) ? HgvMetaIdentifierHelper::getValueFromHashByMultidimensionalKey(@identifier[key][index], pathToActualValue) : @identifier[key][index]
        = text_field_tag id, value, :disabled => !@identifier.mutable?, :class => 'observechange'
        %span.delete{:onclick => 'multiRemove(this.parentNode)', :title => I18n.t('tooltip.multiDelete')} x
        %span.move{:title => I18n.t('tooltip.multiMove')} o
  %p.add{:id => 'multiPlus_' + key.to_s}
    %input.observechange
    %span{:onclick => "multiAdd('" + key.to_s + "')", :title => I18n.t('tooltip.multiAdd')}=I18n.t('label.multiAdd')

  = javascript_tag "Sortable.create('multiItems_" + key.to_s + "', {overlap: 'horizontal', constraint: false, handle: 'move'});"
