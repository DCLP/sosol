#main
  = render :partial => 'identifiers/edit_bar'
  .site
    = render :partial => 'identifiers/header'

    #edit
      - form_for @identifier, :url => { :action => :update } do |f| 
        = f.error_messages 

        - @identifier.valid_epidoc_attributes.each do |epidoc_attribute|
          %p
            = f.label epidoc_attribute.to_s.underscore
            = f.text_field epidoc_attribute, :disabled => !@identifier.mutable?

        = render :partial => 'identifiers/edit_commit', :locals => { :f => f, :identifier => @identifier }
