#main
  = render :partial => 'identifiers/edit_bar'
  .site
    = render :partial => 'identifiers/header'
    #edit
      - form_for @identifier, :url => { :action => :updatexml } do |f|
        = f.error_messages

        %p
          %label XML
          %br
          = f.text_area :xml_content, :lang => 'grc', 'xml:lang' => 'grc', :cols => 80, :rows => 40, :wrap => 'off', :class => 'greek'
        = render :partial => 'identifiers/edit_commit', :locals => { :f => f }
