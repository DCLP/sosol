<h1>New decree for <%= @board.title %> board</h1>

<% form_for(@decree) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :action %><br />
    <%= f.text_field :action %>
  </p>
  <p>
    <%= f.label :trigger %><br />
    <%= f.text_field :trigger %>
  </p>
  <p>
    <%= f.label :choices %><br />
    <%= f.text_field :choices %>
  </p>
  <p>    
    <%= f.hidden_field :board_id %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', decrees_path %>
