!!!
%html{html_attrs('en')}
  %head
    %meta{ 'http-equiv' => 'content-type', 'content' => 'text/html;charset=UTF-8' }
    %meta{ 'name' => 'robots', 'content' => 'noindex, nofollow' }
    = stylesheet_link_tag 'editor'
    = stylesheet_link_tag 'pn'
    = stylesheet_link_tag 'header_footer'
    - if controller.controller_name == 'hgv_meta_identifiers' and controller.action_name == 'edit'
      = stylesheet_link_tag 'meta'
    = javascript_include_tag :defaults

  
    %style(type="text/css")
      :sass
        #header_box
          background-image: url('#{image_path("pn_header.jpg")}')
        .loading
          background = gray + 90
          background-image: url('#{image_path("ajax_loader.gif")}')
          background-repeat: no-repeat
          background-position: center center
          -webkit-background-size: 128px 128px
          opacity: .5

  = render :partial => "common/header", :locals => {:active_tab => "edit"}
  #content_box
    = yield
  = render :partial => "common/footer"


   