#main
  = javascript_include_tag :defaults
  = javascript_include_tag 'helper'
    
  .site
    = stylesheet_link_tag 'helper'
    #app2col{:class => "helperpop"}
      = render :partial => 'markup_warn'
      <h4>Modern editor 'corrects' orthographic variant: γλυκητητος --> γλυκύτητος = <:γλυκύτητος|orth|γλυκητητος:>; may also be used with Leiden <...></h4>
      #app_col
        #app_low
          %form{:name => "apporthcorr"}
            %input{ :type => "checkbox", :class => "corrlow", :id => "apporthcorrlow", :name => "low", :value => "apporthcorrlow"}Cert Low
        #app_text
          %input{ :type => "text", :class => "choosetext greek", :id => "apporthcorr_value", :size => "25"}Accepted (corr)
        #app_desc
          regularized form, e.g. 'γλυκύτητος' (P.Matr. 10.2) or 'ὑπερῷ<ο>ν'
        #app_button
          %button{ :type => "button", :onclick=>"insertAppOrth()" }Insert
          &nbsp
          %button{:type => "button", :onclick => "closeHelper()"}Close
      #app_col
        #app_low
          %form{:name => "apporthsic"}
            %input{ :type => "checkbox", :class => "siclow", :id => "apporthsiclow", :name => "low", :value => "apporthsiclow"}Cert Low
        #app_text
          %input{ :type => "text", :class => "choosetext greek", :id => "apporthsic_value", :size => "25"}Rejected (sic)
        #app_desc
          on papyrus, e.g. 'γλυκητητος' (P.Matr. 10.2) or 'υπερων'
      #app_clarify_text
        enter underdots within the &lt;corr&gt; content using the underdot helper after inserting basic form orthographic variant
