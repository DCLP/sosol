#main
  = javascript_include_tag :defaults
  = javascript_include_tag 'helper'
    
  .site
    = stylesheet_link_tag 'helper'
    #gapsize{:class => "helperpop"}
      = render :partial => 'markup_warn'
      %h3 Valid expansion input values (parens around ex):
      %p στρ(ατηγός) / (ἔτους) / (Ἑπτα)κωμ(ίας) / ν(ε)ωτ(έρῳ) / στρ(ατηγός?) vel sim
      %h3 Valid abbreviation input values (text only):
      %p Ἀθην
      #abbrevtext_div
        %input{ :type => "text", :class => "choosetext greek", :id => "abbrev_value", :size => "25"}Input
      #low_left
        %form{:name => "abbrev"}
          %input{ :type => "checkbox", :class => "abbrevlow_check_c", :id => "abbrevlow", :name => "abbrevlow_check_n", :value => "abbrevlow"}Cert Low
      -#abbrevtype_div
      #type_left
        %input{ :checked => "", :type => "radio", :class => "abbrev_radio", :id => "expan", :name => "abbrev_type", :value => "expan", :onclick => "cchecktypeabbrev(this.id)"}Expansion
