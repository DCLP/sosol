#main
  = javascript_include_tag :defaults
  = javascript_include_tag 'helper'
    
  .site
    = stylesheet_link_tag 'helper'
    #number_div{:class => "helperpop"}
      = render :partial => 'markup_warn'
      %h3 Enter Greek/Latin content and/or Numerical value
      #numinp_div
        %input{ :type => "text", :class => "choosetext greek", :id => "number_content", :size => "04"}Greek/Latin content on papyrus, e.g. κε, γ
        %br
        %input{ :type => "text", :class => "choosetext", :id => "number_value", :size => "04"}Numerical value, e.g. 25, 1/3
        %br
        %br
        %form{:name => "number"}
          %input{ :type => "checkbox", :class => "rend_frac_check_c", :id => "rendfrac", :name => "rend_frac_check_n", :value => "rendfrac", :enabled => "true"}Select if scribe indicated fraction with tick (’)
      #button_left
        %button{ :type => "button", :onclick=>"insertNum()" }Insert
        &nbsp
        %button{:type => "button", :onclick => "closeHelper()"}Close
