#main
  = javascript_include_tag :defaults
  = javascript_include_tag 'helper'
    
  .site
    = stylesheet_link_tag 'helper'
    #app2ol{:class => "helperpop"}
      = render :partial => 'markup_warn'
      %h4 Editorial = Correction noted in series series Corrigenda or other publication
      %h4 BL = Correction noted in BL
      %h4 PE = Correction proposed directly via PE -- not published elsewhere
      #app_col
        #app_text
          %input{ :type => "text", :class => "choosetext greek", :id => "appeditlem_value", :size => "25"}
        #app_desc
          Correct form
      #app_col
        #app_text
          %input{ :type => "text", :class => "choosetext greek", :id => "appeditrdg_value", :size => "25"}
        #app_desc
          Original, Previous, incorrect form
    %form{:name => "appEditForm"}
      #appEditCitation
        %h4 Citation
        %input{ :checked => "", :type => "radio", :class => "choosetextradio", :id => "Editorial", :name => "appEditType", :value => "Editorial", :onclick => "checkEditType(this.id)"} Editorial
        #appEditCitationText
          %input{ :type => "text", :class => "choosetext greek", :id => "appeditresp_value", :size => "25"} Citation, e.g.: J. Doe, ZPE 234 (2015) 3-4
        %br
        %br
        %input{ :type => "radio", :class => "choosetextradio", :id => "BL", :name => "appEditType", :value => "BL", :onclick => "checkEditType(this.id)"} BL
        #appEditCitationText
          %input{ :type => "text", :class => "choosetext greek", :id => "appeditBLvol_value", :disabled => "true", :size => "5"} Volume
          &nbsp
          %input{ :type => "text", :class => "choosetext greek", :id => "appeditBLpage_value", :disabled => "true",  :size => "5"} Page
        %br
        %br
        %input{ :type => "radio", :class => "choosetextradio", :id => "PE", :name => "appEditType", :value => "PE", :onclick => "checkEditType(this.id)"} PE
        #appEditCitationText
          %input{ :type => "text", :class => "choosetext greek", :id => "appeditPE_value", :disabled => "true",  :size => "25"} Authority, e.g.: M. Smith
        %br
    #app_button
      %button{ :type => "button", :onclick=>"insertAppEdit()"}Insert
      &nbsp
      %button{:type => "button", :onclick => "closeHelper()"}Close
